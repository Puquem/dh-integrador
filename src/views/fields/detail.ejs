<!DOCTYPE html>
<html lang="en">
<head>
	<%- include("../partials/head.ejs")%> 
	
  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<link rel="stylesheet" href="/css/fieldDetail.css">
	
	<title>METEGOL | Detalle Cancha</title>
</head>
<body>
	<!--Header-->
	<%- include("../partials/header.ejs")%> 
		
	<!--Main Content-->
	<div class="align">
		<div class="form">
			<h1 class="nombreCancha"> <%= fields.name %></h1>
			<div class="container-title">
				<h2 class="nombreComplejo"> Complejo: <%= fields.complexes.complex %></h2>
				<div class="right">
					<li><a href="/fields/"><i class="fas fa-angle-left"></i>Volver al listado</a></li>
				</div>
			</div>
			
			<div class="body">

				<!-- Carousel de imágenes -->
				<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="500">
					
					<ul class="carousel-indicators">
						<li data-target="#carouselExampleSlidesOnly" data-slide-to="0" class="active"></li>
						<li data-target="#carouselExampleSlidesOnly" data-slide-to="1"></li>
						<li data-target="#carouselExampleSlidesOnly" data-slide-to="2"></li>
					</ul>
					<div class="carousel-inner">
					  <div class="carousel-item active">
						  <img style="height: 400px; width: 100%" src="/images/fields/<%= fields.image1 %>" class="d-block w-100" alt="...">
					  </div>
					  <div class="carousel-item">
						<img style="height: 400px; width: 100%" src="/images/fields/<%= fields.image2 %>" class="d-block w-100" alt="...">
					  </div>
					  <div class="carousel-item">
						<img style="height: 400px; width: 100%" src="/images/fields/<%= fields.image3 %>" class="d-block w-100" alt="...">
					  </div>
					</div>
					<a class="carousel-control-prev" data-slide="prev" data-target="#carouselExampleSlidesOnly">
						<span class="carousel-control-prev-icon"></span>
					  </a>
					  <a class="carousel-control-next" data-slide="next" data-target="#carouselExampleSlidesOnly">
						<span class="carousel-control-next-icon"></span>
					</a>
				</div>

				  <!-- Descripción producto -->	
				<div class="descripcion">
					<h3 class="titulo"><b>Dirección: </b> <%= fields.complexes.address %></h3>
					<p><a href="https://www.google.com/maps/search/<%= fields.complexes.address %>">Ver ubicación en el mapa</a></p>
					<h3 class="titulo"><b>Teléfono</b>: <%= fields.complexes.phone %> </h3>
					<h3 class="titulo"><b>Servicios: </b> <%= fields.description %></h3>
					<h3 class="titulo"><b>Césped: </b> <%= fields.grasses.type %> </h3>
					<h3 class="titulo"><b>Cantidad de jugadores: </b> <%= fields.categories.category %> </h3>
					<h3 class="titulo"><b>Precio por hora: </b> ARS <%= fields.price %></h3>
					
					<section class="buttons">
						<form class="has-buttons" action="?_method=DELETE" method="POST" href="/fields/<%= fields.id %>" onclick="return confirm('¿Está seguro que desea eliminar esta cancha?')">
							<button class="btn" id="delete" type="submit">ELIMINAR</button>
						</form>
						<a class="btn" id= "edit" type="submit" href="/fields/<%= fields.id %>/edit">EDITAR</a>
					</section>
				</div> 	
			</div>
		</div>
	</div>

	<!-- Carousel Settings -->
	<script>
		$('.carousel').carousel({
			interval: 3000 // 3seg de pausa entre imagen e imagen
		});
	</script>
				
	<!--Footer-->
	<%- include("../partials/footer.ejs")%> 
</body>
</html>
