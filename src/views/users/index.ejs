<!DOCTYPE html>
<html lang="en">
<head>
	<%- include("../partials/head.ejs")%> 
	<!--===============================================================================================-->
	<link rel="stylesheet" href="/css/fieldList.css">
	
	<title>METEGOL | Listado de usuarios</title>
</head>

<body>
	
	<!--Header-->
	<%- include("../partials/header.ejs")%> 
	
	<!--Main Content-->
	<div class="align">
		<div class="box">
			<div class="container-title">
				<h1>Listado de usuarios</h1>
				<div class="right">
					<li><a href="/users/create">REGISTRAR NUEVO USUARIO</a></li>
				</div>
			</div>
			<div class="row">
				
				<% users.forEach( user => { %>

					<div class="col-lg-3 col-md-6 mb-" id ="space">
						<div class="card h-100">
							<a href="/users/<%= user.id %>"><img class="card-img-top" id="image" src="/images/avatars/<%= user.avatar ? user.avatar:'default-user-image.png' %>"></a>
							<div class="card-body">
								<h4 class="card-title">
									<a href="/users/<%= user.id %>"><%= user.name + " " + user.surname%></a>
								</h4>
								<p class="card-text"><%= user.email %></p>
							</div>
							<div class="card-footer">
								<a class="btn btn-primary" type="submit" href="/users/<%= user.id %>">VER DETALLE</a>
							</div>
						</div>
					</div>
				<% })%>
				
			</div>
		</div>
	</div>
	
	<!--Footer -->
	<%- include("../partials/footer.ejs")%> 
	
 </body>
</html>
